<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/LinearLayoutMeteor"
        android:orientation="vertical"
        android:divider="@drawable/line"
        android:dividerPadding="0dp"
        android:showDividers="middle"
        android:background="#F9FAFC" >

        <RelativeLayout
            android:id="@+id/RelativeLayoutMeteor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:id="@+id/btnthree" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textthree"
                android:layout_toRightOf="@id/btnthree"
                android:layout_alignParentRight="true"
                android:text="Id: 320171210\nName: Antihelion Source\nDates: 2017/Dec/10\nPeak: Multiple\nCelestialLongitude: Null\nSpeed(km/s): 30"
                android:textColor="#000000"
                android:layout_marginLeft="60dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutMeteor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:id="@+id/btnthree1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textthree1"
                android:layout_toRightOf="@id/btnthree1"
                android:layout_alignParentRight="true"
                android:text="Id: 320171228\nName: Quadrantids\nDates: 2017/Dec/28\nPeak: Jay/3\nCelestialLongitude: 283.15\nSpeed(km/s): 41"
                android:textColor="#000000"
                android:layout_marginLeft="60dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutMeteor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:id="@+id/btnthree2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textthree2"
                android:layout_toRightOf="@id/btnthree2"
                android:layout_alignParentRight="true"
                android:text="Id: 320170416\nName: Lyrids\nDates: 2017/Apr/16\nPeak: Apr/22\nCelestialLongitude: 32.32\nSpeed(km/s): 49"
                android:textColor="#000000"
                android:layout_marginLeft="60dp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>